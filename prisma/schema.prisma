generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  password     String
  phone        String?
  totalStorage BigInt @default(0)
  limitStorage BigInt @default(5000)
  refreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  userProfileId Int         @unique
  userProfile   UserProfile @relation(fields: [userProfileId], references: [id], onDelete: Cascade)

  files   File[]
  folders Folder[]

  groups UserAttendGroup[] @relation("UserGroup")

  ownerGroups Group[]

  posts Post[]

  likePosts  Post[] @relation("PostLikes")
  sharePosts Post[] @relation("PostShares")

  comments     Comment[]
  commentLikes Comment[] @relation("CommentLikes")

  sendRelations   UserRelation[] @relation("UserRelationSend")
  reciveRelations UserRelation[] @relation("UserRelationRecive")

  conversations Conversation[] @relation("UserConversation")

  messages     Message[]
  seenMessages Message[] @relation("SeenMessage")

  notifications Notify[] @relation("ReciveNotify")

  sendNotifications Notify[] @relation("SendNotify")
}

model UserRelation {
  isFriend Boolean @default(false)
  isFollow Boolean @default(false)
  isBlock Boolean @default(false)

  friendRequestStatus  FriendRequestStatus @default(NONE)
  // relation 
  userSendId Int
  userSend   User @relation("UserRelationSend", fields: [userSendId], references: [id], onDelete: Cascade)

  userReciveId Int
  userRecive   User @relation("UserRelationRecive", fields: [userReciveId], references: [id], onDelete: Cascade)

  @@id([userSendId, userReciveId])
}

enum FriendRequestStatus {
  NONE
  PENDING
  ACCEPTED
  DELETED
}

model UserProfile {
  id       Int      @id @default(autoincrement())
  fullname String
  address  String?
  birthday DateTime
  bio      String?
  avatar   String?
  gender   Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  user User?
}

model Media {
  id   Int     @id @default(autoincrement())
  url  String
  caption String?
  type TypeMedia @default(IMAGE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

enum TypeMedia {
  IMAGE
  VIDEO
}

enum UploadPostWhere {
  USER
  GROUP
}

model Post {
  id            Int               @id @default(autoincrement())
  content       String
  like          Int               @default(0)
  share         Int               @default(0)
  comment       Int               @default(0)
  privacy       TypePrivacy       @default(PUBLIC)
  type          TypePost          @default(POST)
  isApproved    Boolean           @default(true)
  from          UploadPostWhere   @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  groupId Int?
  group   Group? @relation(fields: [groupId], references: [id], onDelete: Cascade)


  media Media[]

  files   File[]   @relation("PostFiles")
  folders Folder[] @relation("PostFolders")

  comments Comment[]

  userLikes User[] @relation("PostLikes")
  userShare User[] @relation("PostShares")

  postShareId Int?      
  postShare   Post?     @relation("SharedPost", fields: [postShareId], references: [id]) // Bài được chia sẻ

  sharedPosts Post[]    @relation("SharedPost")

  messages Message[]
}

enum TypePost {
  POST
  SHARE
}

enum TypePrivacy {
  PUBLIC
  FRIENDS
  PRIVATE
  PRIVATE_GROUP
}

model Comment {
  id      Int     @id @default(autoincrement())
  content String
  url     String?
  like    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //relation
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  replyId Int?
  reply   Comment? @relation("ReplyComment", fields: [replyId], references: [id], onDelete: Cascade)

  replies Comment[] @relation("ReplyComment")

  userLikes User[] @relation("CommentLikes")
}

enum UploadDocumentWhere {
  USER
  GROUP
  MESSAGE
}

model File {
  id      Int     @id @default(autoincrement())
  title   String
  url     String
  size    BigInt
  from    UploadDocumentWhere @default(USER)
  privacy TypePrivacy @default(PUBLIC)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  groupId Int?
  group   Group? @relation(fields: [groupId], references: [id], onDelete: Cascade)

  folderId Int?
  folder   Folder? @relation(fields: [folderId], references: [id], onDelete: Cascade)

  posts Post[] @relation("PostFiles")

  messages Message[]
}

model Folder {
  id      Int     @id @default(autoincrement())
  title   String
  url     String
  size    BigInt
  from    UploadDocumentWhere @default(USER)
  privacy TypePrivacy @default(PUBLIC)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  groupId Int?
  group   Group? @relation(fields: [groupId], references: [id], onDelete: Cascade)

  files File[]

  parentFolderId  Int?
  parentFolder    Folder?  @relation("ParentFolder", fields: [parentFolderId], references: [id], onDelete: Cascade)
  childrenFolders Folder[] @relation("ParentFolder")

  posts Post[] @relation("PostFolders")

  messages Message[]
}

model Group {
  id           Int     @id @default(autoincrement())
  groupName    String
  bio          String?
  avatar       String?
  totalStorage BigInt  @default(0)
  limitStorage BigInt  @default(5000)

  type TypeGroup @default(PRIVATE)
  approvalRequired Boolean @default(false) 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  users UserAttendGroup[] @relation("UserGroup")

  files   File[]
  folders Folder[]

  sendNotifications Notify[] @relation("GroupSendNotify")

  posts Post[]
}

enum TypeGroup {
  PUBLIC
  PRIVATE
}

enum GroupPermission {
  NONE
  READER // chỉ xem
  MEMBER // đăng bài, tải tài nguyên
  ADMIN // toàn quyền
}

model UserAttendGroup {
  groupId Int
  group Group @relation("UserGroup",fields: [groupId], references: [id], onDelete: Cascade)

  userId Int
  user User @relation("UserGroup", fields: [userId], references: [id], onDelete: Cascade)

  state       StateAttendGroup  @default(NONE)
  permission  GroupPermission   @default(NONE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([groupId, userId])
}

enum StateAttendGroup {
  NONE
  PENDING
  ACCEPTED
  DELETED
}

model Conversation {
  id            Int      @id @default(autoincrement())
  name          String
  isGroup       Boolean  @default(false)
  lastMessageAt DateTime @default(now())
  totalStorage  BigInt   @default(0)
  limitStorage  BigInt   @default(5000)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  user User[] @relation("UserConversation")

  messages Message[]
}

model Message {
  id   Int     @id @default(autoincrement())
  body String?
  url  String?

  type TypeMessage @default(TEXT)

  deleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relation
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId Int
  sender   User @relation(fields: [senderId], references: [id], onDelete: Cascade)

  seens User[] @relation("SeenMessage")

  fileId         Int?
  file           File?          @relation(fields: [fileId], references: [id], onDelete: Cascade)

  folderId       Int?
  folder         Folder?        @relation(fields: [folderId], references: [id], onDelete: Cascade)

  postId         Int?
  post           Post?          @relation(fields: [postId], references: [id], onDelete: Cascade)
}

enum TypeMessage {
  TEXT
  MEDIA
  FILE
  FOLDER
  POST
  URL
  EMAIL
  PHONE
}

model Notify {
  id        Int      @id @default(autoincrement())
  message   String
  link      String
  type      TypeNotify
  read      Boolean @default(false)
  createdAt DateTime @default(now())

  // relation
  userId Int
  user   User @relation("ReciveNotify",fields: [userId], references: [id], onDelete: Cascade)

  userSendId Int
  userSend User @relation("SendNotify",fields: [userSendId], references: [id], onDelete: Cascade)

  groupSendId Int?
  groupSend Group? @relation("GroupSendNotify", fields: [groupSendId], references: [id], onDelete: Cascade)
}

enum TypeNotify {
  ADD_FRIEND
  ACCEPT_FRIEND
  LIKE_POST
  COMMENT_POST
  REPLY_COMMENT
  LIKE_COMMENT
  SHARE_POST
}
